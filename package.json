{
  "name": "monocle",
  "version": "0.0.1",
  "description": "FLUX with lenses",
  "main": "scripts/index",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackferrofields/monocle.git"
  },
  "bugs": {
    "url": "https://github.com/zackferrofields/monocle/issues"
  },
  "homepage": "https://github.com/zackferrofields/monocle#readme",
  "engine": "node >0.4.3",
  "scripts": {
    "deploy": ". ./deploy.sh",
    "build": "babel ./scripts/index.js -o index.js --source-maps",
    "test": "NODE_ENV=test npm run test:coverage",
    "test:unit": "tape 'scripts/**/*.spec.js'",
    "test:coverage": "nyc --require babel-register --require babel-polyfill npm run test:unit",
    "test:report": "npm run test:coverage && nyc report --reporter=lcov"
  },
  "devDependencies": {
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "nyc": "^8.1.0",
    "tape": "^4.6.0"
  },
  "optionalDependencies": {
    "babel-cli": "^6.6.5"
  },
  "nyc": {
    "exclude": [
      "scripts/**/*.spec.js"
    ],
    "include": [
      "scripts/**/*.js"
    ]
  }
}
