{
  "name": "monocle",
  "version": "0.0.1",
  "description": "FLUX with lenses",
  "main": "scripts/index",
  "author": "",
  "license": "Apache License",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackferrofields/monocle.git"
  },
  "bugs": {
    "url": "https://github.com/zackferrofields/monocle/issues"
  },
  "homepage": "https://github.com/zackferrofields/monocle#readme",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "deploy": ". ./deploy.sh",
    "test": "npm run test:coverage",
    "test:unit": "tape -r babel-polyfill 'scripts/**/*.spec.js'",
    "test:coverage": "nyc npm run test:unit",
    "test:report": "nyc npm run test:unit && nyc report --reporter=lcov"
  },

  "devDependencies": {
    "babel-polyfill": "^6.13.0",
    "nyc": "^8.1.0",
    "tape": "^4.6.0"
  },
  "nyc": {
    "exclude": [
      "scripts/**/*.spec.js"
    ],
    "include": [
      "scripts/**/*.js"
    ]
  }
}
